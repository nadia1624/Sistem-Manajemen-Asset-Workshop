    </div>
</main>

<div id="popupModal" class="popup-modal">
    <div class="modal-content">
        <span class="close-btn" id="closeBtn">&times;</span>
        <h3>Tandai Telah Dikembalikan</h3>
        <form id="returnForm">
            <label for="itemName" class="left-label">Update Kondisi Aset</label>
            <input type="text" id="itemName" name="itemName" required>

            <label for="serialNumber" class="left-label">Keterangan</label>
            <input type="text" id="serialNumber" name="serialNumber" required>

            <label for="imageProof" class="left-label">Bukti Gambar</label>
            <input type="file" id="imageProof" name="imageProof" required>

            <button type="submit" class="btn cancel-btn">Batal</button>
            <button type="submit" class="btn finish-btn">Selesai</button>
        </form>
    </div>
</div>

<script>
    // Mendapatkan elemen modal dan tombol
    const modal = document.getElementById("popupModal");
    const closeBtn = document.getElementById("closeBtn");

    // Menangani klik pada tombol "Selesai"
    const selesaiButtons = document.querySelectorAll('.btn');

    selesaiButtons.forEach(button => {
        button.addEventListener('click', function(event) {
            event.preventDefault();  // Mencegah aksi default
            modal.style.display = 'flex';  // Menampilkan modal
        });
    });

    // Menangani klik pada tombol tutup
    closeBtn.addEventListener('click', function() {
        modal.style.display = 'none';  // Menyembunyikan modal
    });

    // Menangani klik di luar modal untuk menutupnya
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    };
</script>

</body>
</html>
