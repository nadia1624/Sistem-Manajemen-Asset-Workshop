<%- include("../../layout/sidebar.ejs") %>

<main class="content">
    <div class="header-content">
        <h3 style="font-weight: bold;">Permintaan Aset</h3>
        <div class="search-bar">
            <input placeholder="Search..." type="text"/>
            <i class="fas fa-search"></i>
        </div>
    </div>
    <div class="container-fluid px-4">
        <div class="table-responsive">
            <table class="table-compact">
                <thead>
                    <tr>
                        <th width="5%">No</th>
                        <th width="10%">Tanggal</th>
                        <th width="10%">Nama</th>
                        <th width="10%">Unit Kerja</th>
                        <th width="15%">Nama Aset</th>
                        <th width="15%">Gambar</th>
                        <th width="15%">Status</th>
                        <th width="20%">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% const data = [
                        { no: 1, tanggal: "2025-01-17", nama: "John Doe", unitKerja: "IT Department", namaAset: "Laptop", gambar: "https://placehold.co/100x100", keterangan: "Keperluan kerja", status: "Diproses" },
                        { no: 2, tanggal: "2025-01-15", nama: "Jane Smith", unitKerja: "HR Department", namaAset: "Printer", gambar: "https://placehold.co/100x100", keterangan: "Dokumen penting", status: "Disetujui" },
                        { no: 3, tanggal: "2025-01-12", nama: "Alice Brown", unitKerja: "Finance", namaAset: "Scanner", gambar: "https://placehold.co/100x100", keterangan: "Laporan keuangan", status: "Ditolak" },
                    ]; %>
                
                    <% data.forEach((item) => { %>
                        <tr>
                            <td><%= item.no %></td>
                            <td><%= item.tanggal %></td>
                            <td><%= item.nama %></td>
                            <td><%= item.unitKerja %></td>
                            <td><%= item.namaAset %></td>
                            <td>
                                <img class="img-fluid" alt="Gambar Aset" src="<%= item.gambar %>" />
                            </td>
                            <td>
                                <% if (item.status === "Disetujui") { %>
                                    <div class="status-badge disetujui">Disetujui</div>
                                <% } else if (item.status === "Ditolak") { %>
                                    <div class="status-badge ditolak">Ditolak</div>
                                <% } else if (item.status === "Diproses") { %>
                                    <div class="status-badge diproses">Diproses</div>
                                <% } %>
                            </td>
                            <td>
                                <% if (item.status === "Diproses") { %>
                                    <button class="btn btn-setuju" style="background-color: #28a745; color: white;" onclick="showModal('setuju')">
                                        <i class="fas fa-check" style="padding-left: 5px;"></i>
                                    </button>
                                    <button class="btn btn-tolak" style="background-color: #dc3545; color: white;" onclick="showModal('tolak')">
                                        <i class="fas fa-times" style="padding-left: 5px;"></i>
                                    </button>
                                    <button class="btn btn-info" href="/detailInfo" style="background-color: #3A68F3; color: white;">
                                        <i class="fas fa-info-circle" style="padding-left: 5px;"></i>
                                    </button>
                                <% } else if (item.status === "Disetujui" || item.status === "Ditolak") { %>
                                    <button class="btn btn-setuju" style="background-color: #D9D9D9; color: white;" disabled>
                                        <i class="fas fa-check" style="padding-left: 5px;"></i>
                                    </button>
                                    <button class="btn btn-tolak" style="background-color: #D9D9D9; color: white;" disabled>
                                        <i class="fas fa-times" style="padding-left: 5px;"></i>
                                    </button>
                                    <button class="btn btn-info" href="/detailInfo" style="background-color: #3A68F3; color: white;">
                                        <i class="fas fa-info-circle" style="padding-left: 5px;"></i>
                                    </button>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>                
            </table>
        </div>
    </div>

    <!-- Modal -->
    <div id="popupModal" class="popup-modal">
        <div class="modal-content" style="  position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            max-width: 400px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
            <span class="close-btn" id="closeBtn">&times;</span>
            <h3 id="modalTitle"></h3>
            <p id="modalContent"></p>
            <div class="button-konfirmasi">
                <button id="btnNo" class="btn cancel-btn" style="background-color: #D9D9D9;">Tidak</button>
                <button id="btnYes" class="btn finish-btn" style="background-color: #28a745; ">Ya</button>
                </div>
        </div>
    </div>
</main>

<script>
    // Fungsi untuk menampilkan modal berdasarkan tipe
    function showModal(type) {
        const modal = document.getElementById('popupModal');
        const modalTitle = document.getElementById('modalTitle');
        const modalContent = document.getElementById('modalContent');
        const btnYes = document.getElementById('btnYes');

        if (type === 'setuju') {
        modalTitle.textContent = 'Setujui Permintaan';
        modalContent.textContent = 'Apakah Anda yakin ingin menyetujui permintaan ini?';
        btnYes.style.backgroundColor = '#28a745'; // Warna hijau
        btnYes.onclick = function () {
            alert('Permintaan disetujui!');
            modal.style.display = 'none';
        };
    } else if (type === 'tolak') {
        modalTitle.textContent = 'Tolak Permintaan';
        modalContent.textContent = 'Apakah Anda yakin ingin menolak permintaan ini?';
        btnYes.style.backgroundColor = '#dc3545'; // Warna merah
        btnYes.onclick = function () {
            alert('Permintaan ditolak!');
            modal.style.display = 'none';
        };
        }

        // Tampilkan modal
        modal.style.display = 'block';
    }

    // Fungsi untuk menutup modal
    document.getElementById('closeBtn').onclick = function () {
        document.getElementById('popupModal').style.display = 'none';
    };

    // Tutup modal ketika klik di luar konten
    window.onclick = function (event) {
        const modal = document.getElementById('popupModal');
        if (event.target === modal) {
            modal.style.display = 'none';
        }
    };

    // Tombol "Tidak" untuk menutup modal
    document.getElementById('btnNo').onclick = function () {
        document.getElementById('popupModal').style.display = 'none';
    };
</script>
