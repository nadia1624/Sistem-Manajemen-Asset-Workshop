<body>
    <!-- Gunakan currentPath yang sudah dikirim dari route -->
    <%- include('../../layout/header.ejs', { currentPath: currentPath }) %>
    
    <style>
        th:nth-child(1), td:nth-child(1) { width: 5%; }
        th:nth-child(2), td:nth-child(2) { width: 15%; }
        th:nth-child(3), td:nth-child(3) { width: 25%; }
        th:nth-child(4), td:nth-child(4) { width: 25%; }
        th:nth-child(5), td:nth-child(5) { width: 15%; }
        th:nth-child(6), td:nth-child(6) { width: 15%; }
    </style>
    
    <main class="content">
        <div class="container-fluid px-4">
            <div class="table-wrapper">
                <div class="table-responsive">
                  <div class="table-bungkus">
            <div class="table-scroll">
                <table class="table-compact">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Tanggal</th>
                            <th>Nama Barang</th>
                            <th>Gambar</th>
                            <th>Status Pengecekan</th>
                            <th>Status Pengembalian</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% const dataDummy = [
                            { no: 1, tanggal: "2025-01-15", nama: "Laptop Dell XPS", gambar: "https://placehold.co/100x100", status : "Disetujui", statuspengembalian:"returned" },
                            { no: 2, tanggal: "2025-01-14", nama: "Meja Kerja", gambar: "https://placehold.co/100x100", status: "Ditolak", statuspengembalian:"NotReturned" },
                            { no: 3, tanggal: "2025-01-13", nama: "Printer Epson", gambar: "https://placehold.co/100x100", status: "Diproses", statuspengembalian:"returned" },
                            { no: 4, tanggal: "2025-01-15", nama: "Laptop Dell XPS", gambar: "https://placehold.co/100x100", status : "Disetujui", statuspengembalian:"returned" },
                            { no: 5, tanggal: "2025-01-14", nama: "Meja Kerja", gambar: "https://placehold.co/100x100", status: "Ditolak", statuspengembalian:"NotReturned" },
                            { no: 6, tanggal: "2025-01-13", nama: "Printer Epson", gambar: "https://placehold.co/100x100", status: "Diproses", statuspengembalian:"returned" },
                        ]; %>

                        <% dataDummy.forEach((item) => { %>
                            <tr>
                                <td><%= item.no %></td>
                                <td><%= item.tanggal %></td>
                                <td><%= item.nama %></td>
                                <td>
                                    <img class="img-fluid" alt="Gambar Aset" src="<%= item.gambar %>"/>
                                </td>
                                <td>
                                    <% if (item.status === "Disetujui") { %>
                                        <div class="status-badge disetujui">Disetujui</div>
                                    <% } else if (item.status === "Ditolak") { %>
                                        <div class="status-badge ditolak">Ditolak</div>
                                    <% } else if (item.status === "Diproses") { %>
                                        <div class="status-badge diproses">Diproses</div>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="status-badge <%= item.statuspengembalian %>"><%= item.statuspengembalian %></span>
                                </td>           
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
            </div>
        </div>
    </main>
