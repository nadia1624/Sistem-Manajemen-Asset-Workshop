<html lang="en">
 <head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <title>
   Login
  </title>
  <script src="https://cdn.tailwindcss.com">
  </script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Raleway:wght@400;700&display=swap" rel="stylesheet">
  <style>
    /* Font for headings */
    h1, h2, h3, h4, h5, h6 {
      font-family: 'Raleway', sans-serif;
    }

  /* Font for body text */
  body, p, span, label, input, button {
    font-family: 'Montserrat', sans-serif;
  }

  </style>
 </head>
 <body class="bg-gray-100 flex items-center justify-center h-screen">
  <div class="flex w-full h-full max-w-full shadow-lg">
   <!-- Left Side -->
   <div class="flex-[0.4] bg-[#F7F7F5]p-8 flex flex-col items-center justify-center h-full">
    <h1 class="text-3xl font-bold mb-2">
     WELCOME TO
    </h1>
    <h2 class="text-2xl font-bold mb-10">
     INVENTRACK
    </h2>
    <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8 min-h-[430px]">
      <h3 class="text-3xl font-bold mb-10 text-center mt-6">
        SIGN IN
      </h3>
      <form class="space-y-7">
        <div>
          <label class="block text-sm font-bold text-gray-700" for="nip">
            NIP
          </label>
          <input class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" id="nip" name="nip" placeholder="NIP Pengguna" type="text" />
        </div>
        <div>
          <label class="block text-sm font-bold text-gray-700" for="password">
            Password
          </label>
          <input class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" id="password" name="password" placeholder="Password Pengguna" type="password" />
        </div>
        <div class="text-center">
          <button class="mt-6 py-2 px-14 bg-red-600 text-white text-xs font-bold rounded-full hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" type="submit">
            SIGN IN
          </button>
        </div>
      </form>
    </div>
    
   </div>
   <!-- Right Side -->
   <div class="flex-[0.6] relative h-full">
    <img src="/image/background-logo.jpg" alt="Background image of PT Semen Padang" class="absolute inset-0 w-full h-full object-cover opacity-50" />
    <div class="absolute inset-0 bg-red-700 opacity-75">
    </div>
    <div class="relative z-10 flex flex-col items-center justify-center h-full text-white p-8">
     <img src="/image/logo.png" alt="PT Semen Padang Logo" class="mb-4 w-40 h-auto" />
     <h1 class="text-3xl font-bold mb-2">
      PT SEMEN PADANG
     </h1>
     <p class="text-lg font-semibold">
      SISTEM INFORMASI MANAJEMEN ASET WORKSHOP
     </p>
    </div>
   </div>
  </div>
 </body>
</html>
