<%- include('layout/header.ejs', { currentPath: currentPath }) %>

<html>
<head>
    <title>Profile Page</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <style>
        .main-body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }
        .profile-container {
            background-color: #fff;
            border: 1px solid #000;
            border-radius: 10px;
            padding: 30px;
            width: 100%;
            max-width: 1300px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .profile-section {
            display: flex;
            gap: 30px;
            margin-bottom: 30px;
        }
        .profile-pic {
            display: flex;
            flex-direction: column;
            align-items: center;
            flex-shrink: 0;
        }
        .profile-pic img {
            border-radius: 50%;
            width: 150px;
            height: 150px;
            object-fit: cover;
            border: 2px solid #000;
        }
        .profile-pic a {
            color: #007bff;
            text-decoration: none;
            margin-top: 15px;
            font-size: 14px;
        }
        .form-section {
            flex-grow: 1;
        }
        .form-group {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
        }
        .form-group .field-value {
            width: 100%;
            padding: 10px;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            color: #495057;
            min-height: 42px;
        }
        .form-group div {
            width: 50%;
        }
        .buttons {
            display: flex;
            justify-content: space-between;
            margin-right: 12px;
        }
        .buttons button {
            padding: 10px 20px;
            border: 1px solid #000;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            min-width: 120px;
            max-width: 180px;
            transition: all 0.3s ease;
        }
        .buttons .change-password {
            background-color: #fff;
            color: #000;
        }
        .buttons .change-password:hover {
            background-color: #f0f0f0;
        }
        .buttons .update-profile {
            background-color: #b30000;
            color: #fff;
        }
        .buttons .update-profile:hover {
            background-color: #990000;
        }
        @media (max-width: 768px) {
            .profile-section {
                flex-direction: column;
                align-items: center;
            }
            .profile-pic {
                margin-bottom: 20px;
            }
            .form-group {
                flex-direction: column;
                gap: 15px;
            }
            .form-group div {
                width: 100%;
            }
            .buttons {
                flex-direction: row;
                gap: 15px;
            }
            .buttons button {
                flex: 1;
                max-width: none;
            }
        }
    </style>
</head>
<body class="main-body">
    <div class="profile-container">
        <div class="profile-section">
            <div class="profile-pic">
                <img src="/image/logo.png" alt="Profile picture" width="150" height="150"/>
                <a href="#">Ubah Profil</a>
            </div>
            <div class="form-section">
                <div class="form-group">
                    <div>
                        <label for="name">Nama</label>
                        <div id="name" class="field-value">John Doe</div>
                    </div>
                    <div>
                        <label for="email">Email</label>
                        <div id="email" class="field-value">john.doe@example.com</div>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label for="nip">NIP</label>
                        <div id="nip" class="field-value">198504122010051001</div>
                    </div>
                    <div>
                        <label for="unit">Unit Kerja</label>
                        <div id="unit" class="field-value">Departemen IT</div>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label for="phone">Nomor Telepon</label>
                        <div id="phone" class="field-value">081234567890</div>
                    </div>
                    <div>
                        <label for="position">Jabatan</label>
                        <div id="position" class="field-value">Senior Developer</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="buttons">
            <a href="ubahPass">
            <button class="change-password">Ubah Password</button>
            </a>
            <a href="ubahProfil">
            <button class="update-profile">Ubah Profil</button>
            </a>
        </div>
    </div>
</body>
</html>
